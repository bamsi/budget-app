<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <%= image_tag item.icon, alt: item.name, class: 'img-fluid rounded-start' %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= item.name %></h5>
        <p class="card-text"><%= item.expenditures.sum(:amount)%></p>
        <p class="card-text"><small class="text-muted">Created By <%= current_user.name %></small></p>
      </div>
    </div>
  </div>
</div>