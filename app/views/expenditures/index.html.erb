<div class="card mb-3">
  <div class="row p-1 g-5">
    <div class="col-3 d-flex justify-content-start align-items-center">
       <%= image_tag @category.icon, alt: @category.name, class: 'img-fluid avator' %>
    </div>
    <div class="col-9 align-self-center">
      <div class="d-flex justify-content-between">
        <p class="h2"><%= @category.name %></p>
        <div> 
          <p class="h3">$<%= @category.expenditures.sum(:amount) %></p>
          <p class="h6 text-black-50 text-end">Total</p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="card">
  <ul class="list-group">
    <% @category.expenditures.order(created_at: :desc).each do |expenditure|%>
      <li class="list-group-item">
        <%= render partial: "shared/expenditure", locals: {expenditure: expenditure} %>
      </li>
    <% end %>
  </ul>
</div>

<div class="d-flex justify-content-between mt-2">
  <%= button_to 'Back', categories_path, method: 'get', class: 'btn btn-primary' %>
  <%= button_to 'Add Transaction', new_category_expenditure_path(category_id: @category.id), method: 'get', class: 'btn btn-primary' %>
</div>

