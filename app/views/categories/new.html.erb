<p class="h3 text-secondary">Add Category</p>
<%= form_with model: @category, url: categories_path do |f| %>
  <div class='row mb-3'>
    <%= f.label :name, class: 'col-md-2 col-form-label col-form-label-lg' %>
    <div class="col-md-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class='row mb-3'>
    <%= f.label :icon,'Paster icon url', class: 'col-md-2 col-form-label col-form-label-lg' %>
    <div class="col-md-10">
      <%= f.text_field :icon, class: 'form-control' %>
    </div>
  </div>
  <div class="d-flex justify-content-between">
    <%= link_to 'Back', categories_path, method: 'get', class: 'btn btn-primary' %>
    <%= f.submit "Add Category", class: 'btn btn-primary' %>
  </div>
<% end %>

